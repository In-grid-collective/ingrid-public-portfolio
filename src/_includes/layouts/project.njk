---
layout: base.njk
---



 
  <div class="font-Test2 pointer-events-none relative flex gap-10 overflow-hidden border border-dotted border-y-indigo-600 hover:text-white hover:bg-indigo-600 shadow-lg shadow-indigo-600	">
    <div class="animate-marquee flex min-w-full shrink-0 items-center justify-around gap-10 ">
          <span class="mx-4 text-4xl">TRANSNATIONAL ANTI-COLONIAL TRANS★FEMINIST COUNTER CLOUD ACTION DAY</span>
    </div>
    <div aria-hidden="true" class="animate-marquee flex min-w-full shrink-0 items-center justify-around gap-10">
             <span class="mx-4 text-4xl">TRANSNATIONAL ANTI-COLONIAL TRANS★FEMINIST COUNTER CLOUD ACTION DAY</span>

    </div>
  </div>
<div class="mt-16 grid grid-cols-3 sm:grid-cols-2 md:grid-cols-2 lg:grid-cols-3 gap-4 p-4 border-dotted border-indigo-600 border shadow-lg shadow-indigo-600">
<div class="p-2 col-span-3 border-indigo-600 border text-indigo-600 border-dotted shadow-lg shadow-indigo-600">	
	<div class="flex items-center justify-center font-Test2 text-3xl  ">
					{{ title }}
				</div>
	</div>
  <div class="p-2 col-span-1  border-indigo-600 border text-indigo-600 border-dotted">		<p class=" italic font-main">
			<time datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate }}</time>
		</p> </div>
  <div class="p-2 row-span-1 col-span-2 border-indigo-600 border text-indigo-600 border-dotted shadow-lg shadow-indigo-600">		<ul class=" relative project-metadata font-main">
			{%- for tag in tags | filterTagList %}
			{%- set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
			<a href="{{ tagUrl }}" class="project-tag">{{ tag }}</a>{%- if not loop.last %}, {% endif %}
			{%- endfor %}
		</ul></div>
  <div class="p-2 row-span-1 col-span-2 border-indigo-600 border text-indigo-600 border-dotted shadow-lg shadow-indigo-600">	
	<p class="project-description  font-main ">
			{{description}}
			
		</p>
	</div>
	<div class="p-2 row-span-1 col-span-1 border-indigo-600 border text-indigo-600 border-dotted">	
		{% if icon %}
			{% set imgurl = "./"+icon %}
			{% image imgurl, "" %}
		{% endif %}
	</div>

	  <div class="p-2 col-span-3 border-indigo-600 border text-indigo-600 border-dotted font-main">
		{{ content | safe }}
  </div>
  <div class="p-2 col-span-3 border-indigo-600 border text-indigo-600 border-dotted">
	{%- if imagegallery %}

	{% set imagelist = imagegallery %}

	<div class="grid grid-cols-2 gap-4 md:grid-cols-4">
		{% for img in imagelist %}
			<div>
			{% set imgurl = "./"+img %}
			{% image imgurl, "alt text", "h-auto", [316, 460, 768,960], "(min-width: 30em) 50vw, 100vw" %}
			</div>
		{% endfor %}
	</div>

	{%- endif %}

  </div>


</div>

</div>
<div class="justify-between flex pt-6 text-indigo-600">
	<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
  <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 15.75 3 12m0 0 3.75-3.75M3 12h18" />
</svg>
<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
  <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 8.25 21 12m0 0-3.75 3.75M21 12H3" />
</svg>
	</div>
	{%- if collections.projects %}
	{%- set previousProject = collections.projects | getPreviousCollectionItem %}
	{%- set nextProject = collections.projects | getNextCollectionItem %}
	{%- if nextProject or previousProject %}
	<div class="justify-between flex ">
		{%- if previousProject %}<div class="justify-start font-Test3 text-indigo-600"><a href="{{ previousProject.url }}">{{ previousProject.data.title }}</a></div>{% endif %}
		{%- if nextProject %}<div class="justify-end font-Test3 text-indigo-600 text-right"><a href="{{ nextProject.url }}">{{ nextProject.data.title }}</a></div>{% endif %}
	</div>
	{%- endif %}
	{%- endif %}

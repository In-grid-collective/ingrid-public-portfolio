<div class="place-items-center grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 lg:gap-8">
		{% for person in peoplelist %}
			<div class=" p-8 hover:text-white hover:bg-indigo-600 text-slate-800 border border-dotted border-indigo-600 shadow-lg shadow-indigo-600 ">
				
				<a href="/people/{{person.key}} " class="item-center">

					{% if person.photo %} 
					{% set imgurl = "../../public/assets/img/" + person.photo %}
					{% image imgurl, "" %}
					{% endif %}
				</a>
				<h3 class="font-Test3 text-2xl pt-2  ">{% if person.name  %}{{ person.name }}{% endif %}</h3>
					
			</div>
		{% endfor %}
	</div>
---
layout: home.njk
pagination:
   data: people
   size: 1
   alias: person
permalink: "/people/{{person.key}}/"
eleventyComputed:
   title: "{{person.name}}"
---
<div class="mt-16 grid grid-cols-1 md:grid-cols-3  gap-4 p-4">
  
  <div class="col-span-1 grid gap-4">
  {# PHOTO #}
    <div class="p-2 row-span-1 border-indigo-600 border border-dotted text-indigo-600 shadow-inner shadow-indigo-600"> 
      {% if person.photo %} 
      {% set imgurl = "../../public/assets/img/" + person.photo %}
      {% image imgurl, "" %}
      {% endif %}
    </div>
    {# NAME #}
    <div class="p-2 row-span-4 border-indigo-600 border border-dotted text-indigo-600 shadow-md shadow-indigo-600">  
      <h2 class="font-Test2 text-3xl">{{ person.name }}</h2>
    </div>
    {# SOCIALS #}
    <div class="p-2 row-span-1 border-indigo-600 border border-dotted text-indigo-600 shadow-md shadow-indigo-600">    <p class="font-main">
        Website: <a href="{{person.website}}" target="_new">{{person.website}}</a><br/>
        Instagram: <a href="https://instagram.com/{{person.instagram}}" target="_new">@{{person.instagram}}</a>
      </p>
    </div>
  </div>
  <div class="col-span-1 md:col-span-2 grid gap-4">
    {# BIO #}
    <div class="p-2 row-span-1 border-indigo-600  border-dotted text-indigo-600 shadow-inner shadow-indigo-600">    
      <p class="font-main">{{person.bio}}</p>
    </div>
    {# CREDITS #}
    <div class="p-2 col-span-1 border-indigo-600 border border-dotted text-indigo-600 shadow-md shadow-indigo-600"> 
      {%- set prodsupportcredits = collections.projects | getProjectByRolePerson(person.key, "production support") %}

      {%- if prodsupportcredits.length > 0  %}
      <p>PRODUCTION SUPPORT:</p>
      <ul>
      {% for project in prodsupportcredits %}
        <li><a href="{{project.url}}">{{project.data.title}}</a></li>
      {% endfor %}
      </ul>
      {%- endif %}


      {%- set artistcredits = collections.projects | getProjectByRolePerson(person.key, "participating artist") %}
      {%- if artistcredits.length > 0  %}
      <p>PARTICIPATING ARTIST:</p>
      <ul>
      {% for project in artistcredits %}
        <li><a href="{{project.url}}">{{project.data.title}}</a></li>
      {% endfor %}
      </ul>
      {%- endif %}

      {%- set eventsupportcredits = collections.projects | getProjectByRolePerson(person.key, "event support") %}
      {%- if eventsupportcredits.length > 0  %}
      <p>EVENT SUPPORT:</p>
      <ul>
      {% for project in eventsupportcredits %}
        <li><a href="{{project.url}}">{{project.data.title}}</a></li>
      {% endfor %}
      </ul>
      {%- endif %} </div>
    </div>
  </div>
</div>
 
